const linkStyles = "underline decoration-2 underline-offset-4 focus:outline-none focus:bg-yellow-300 focus:box-decoration-clone focus:border-b-4 focus:border-black active:bg-yellow-300 active:box-decoration-clone active:border-b-4 active:border-black";

const srOnlyStyles = "absolute w-[1px] h-[1px] p-0 -m-[1px] overflow-hidden clip-[rect(0,0,0,0)] whitespace-nowrap border-0";
---

<Layout title="Résumé | Steven Wise">
  <main class="max-w-7xl mx-auto px-6">
    <div class="pt-32 pb-24">
      <h1 class="text-[72px] font-montserrat font-bold text-gray-900 mb-12">Résumé</h1>
      
      <div class="space-y-16">
        <!-- Expertise Section -->
        <section>
          <h2 class="text-4xl font-montserrat font-bold text-gray-900 mb-8">Expertise</h2>
          <div class="md:w-3/4">
            <ExpertiseList />
          </div>
        </section>

        <!-- Experience Section -->
        <section>
          <h2 class="text-4xl font-montserrat font-bold text-gray-900 mb-8">Experience</h2>
          <div class="space-y-12 md:w-3/4">
            {experience.map((job, index) => (
              <div class={`space-y-4 ${index !== experience.length - 1 ? 'mb-16' : ''}`}>
                <h3 class="text-2xl font-montserrat font-semibold text-gray-900">{job.role}</h3>
                <p class="text-xl text-gray-600 font-[700]">{job.company}</p>
                <p class="text-lg text-gray-500">{job.period}</p>
                <p class="text-lg text-gray-600">{job.description}</p>
                <ul class="list-disc pl-5 space-y-2">
                  {job.achievements.map(achievement => (
                    <li class="text-lg text-gray-600 pl-2 marker:text-gray-400">{achievement}</li>
                  ))}
                </ul>
                {job.caseStudy && (
                  <div class="pt-2">
                    <a 
                      href={job.caseStudy} 
                      class={`text-gray-600 hover:text-gray-900 ${linkStyles}`}
                    >
                      View case study
                      <span class={srOnlyStyles}>
                        for {job.company.split('/')[0].trim()}
                      </span>
                    </a>
                  </div>
                )}
              </div>
            ))}
          </div>
        </section>

        <!-- Other Projects Section -->
        <section>
          <h2 class="text-4xl font-montserrat font-bold text-gray-900 mb-8">Other UX design projects</h2>
          <div class="space-y-8 md:w-3/4">
            {otherProjects.map(project => (
              <div class="space-y-2">
                <h3 class="text-xl font-montserrat font-semibold text-gray-900">{project.role}</h3>
                <p class="text-lg text-gray-600 font-[700]">{project.company}</p>
                <p class="text-gray-500">{project.period}</p>
                <p class="text-gray-600">{project.description}</p>
              </div>
            ))}
          </div>
        </section>
      </div>
    </div>

    <!-- Extra Curricula Section with grey background -->
    <div class="bg-gray-100 -mx-6 px-6 -mb-[100px]">
      <div class="max-w-7xl mx-auto pt-[88px] pb-24">
        <section class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div class="space-y-6">
            <h2 class="text-4xl font-montserrat font-bold text-gray-900 mb-8">Extra curricula interests and activities</h2>
            <p class="text-xl text-gray-600">Design, technology and everything in between. Personal productivity. Photography. Cooking (and eating). Cycling in all its forms.</p>
            
            <p class="text-lg text-gray-600">I recently combined my love of food, cycling and photography in an article and recipe I wrote for the <span class="font-medium">Porky Punk Annual Manual</span>, a book self-published by a culinary community.</p>
            
            <p class="text-lg text-gray-600">My cycling adventures have taken me to many places, from Cardiff to Colwyn Bay, London to John O'Groats and over the Alpine climbs of the Tour de France. You can view my trip photos on <a href="https://instagram.com" class={`text-gray-900 ${linkStyles}`}>Instagram</a>.</p>
          </div>
          
          <div>
            <img 
              src="/images/recipe-book.jpg" 
              alt="Article and recipe from Porky Punk Annual Manual"
              class="w-full"
            />
            <p class="text-center text-gray-600 mt-4">Article and recipe</p>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>