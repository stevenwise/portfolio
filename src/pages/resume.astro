    company: "EE",
    period: "July - September 2012",
    description: "UX design and documentation for modular and responsive eCommerce web site."
  },
  {
    role: "KPI optimisation",
    company: "STA Travel",
    period: "April - July 2012",
    description: "UX lead responsible for increasing the travel booking service's KPIs by optimising key landing pages and booking conversion paths."
  },
  {
    role: "Sales tool application",
    company: "Airbus",
    period: "March - April 2012",
    description: "Design concepts and UX documentation for a multi-platform sales tool"
  },
  {
    role: "Brand launch site",
    company: "M&S Bank",
    period: "February - March 2012",
    description: "Utilised brand strategy and user research to create designs for the bank launch site. The objectives were to promote the proposition and engage users in the signup process."
