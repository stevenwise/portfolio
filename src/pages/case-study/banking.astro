---
import CaseStudyLayout from '../../layouts/CaseStudyLayout.astro';
import Stats from '../../components/Stats.astro';
import ImageTextSection from '../../components/ImageTextSection.astro';
import RichText from '../../components/RichText.astro';
import Testimonials from '../../components/Testimonials.astro';
import FullWidthImage from '../../components/FullWidthImage.astro';
import Quote from '../../components/Quote.astro';
import TextSection from '../../components/TextSection.astro';

const stats = [
  { value: "55", label: "Markets worldwide" },
  { value: "17", label: "Languages supported" },
  { value: "42%", label: "Engagement increase" },
  { value: "28%", label: "Cost reduction" }
];

const designProcess = {
  title: "Design Process",
  subtitle: "Global Design System Approach",
  paragraphs: [
    "Our approach to designing the global banking experience focused on creating a consistent yet locally relevant solution across all markets.",
    "Here's how we tackled this complex challenge:"
  ],
  lists: [
    {
      type: "ordered",
      items: [
        {
          text: "Discovery Phase",
          subItems: [
            "Market research across key regions",
            "Stakeholder interviews in multiple countries",
            "Competitive analysis",
            "User needs assessment"
          ]
        },
        {
          text: "Design System Development",
          subItems: [
            "Component library creation",
            "Documentation standards",
            "Accessibility guidelines",
            "Localization framework"
          ]
        },
        {
          text: "Implementation Strategy",
          subItems: [
            "Phased rollout plan",
            "Market-specific customizations",
            "Performance optimization",
            "Training and support"
          ]
        }
      ]
    }
  ]
};

const testimonials = [
  {
    quote: "The design system Steve developed has become the foundation for all our digital banking services. His attention to detail and understanding of different market needs was exceptional.",
    author: "David Chen",
    role: "Head of Digital Banking, HSBC Asia Pacific"
  },
  {
    quote: "Steve's work on our global banking platform showed remarkable insight into creating experiences that work across cultures while maintaining brand consistency.",
    author: "Emma Thompson",
    role: "Global Head of UX, HSBC"
  }
];

const userQuote = {
  quote: "The new interface makes it so much easier to manage my business accounts across different countries. Everything is consistent and intuitive.",
  author: "Business Banking Customer",
  role: "Hong Kong"
};

const overviewContent = [
  "Led the UX design for HSBC's global business banking platform, creating a consistent experience across 55 markets and 17 languages.",
  "The project focused on increasing user engagement while reducing operational costs through standardization."
];

const challengeContent = [
  "Creating a unified banking experience that would work effectively across diverse markets while meeting local regulatory requirements and user expectations.",
  "Managing the complexity of multiple stakeholders across regions while ensuring consistent implementation of design standards."
];
---

<CaseStudyLayout 
  title="Designing a unified global business banking experience"
  organization="HSBC Business Banking"
>
  <!-- Overview section -->
  <div class="max-w-7xl mx-auto px-6">
    <TextSection 
      title="Overview"
      content={overviewContent}
    />

    <TextSection 
      title="The Challenge"
      subtitle="Global Scale, Local Needs"
      content={challengeContent}
    />
  </div>

  <!-- Stats section -->
  <div class="bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <Stats stats={stats} />
    </div>
  </div>

  <!-- Image text sections -->
  <div class="max-w-7xl mx-auto px-6">
    <ImageTextSection
      title="Discovery"
      content={[
        "Our team conducted extensive research across key markets to understand local banking needs and regulatory requirements.",
        "Key activities included:",
        "• Market research and competitive analysis\n• Stakeholder interviews across regions\n• User research in multiple countries\n• Regulatory requirement mapping\n• Current system evaluation"
      ]}
      image="/images/banking.jpg"
      imageAlt="Global banking platform interface showing multi-language support"
      imagePosition="right"
    />

    <ImageTextSection
      title="Design System Development"
      content={[
        "Created a comprehensive design system that could adapt to different market needs while maintaining brand consistency.",
        "Key deliverables:\n• Component library\n• Documentation standards\n• Accessibility guidelines\n• Localization framework\n• Implementation guides"
      ]}
      image="/images/workflow.jpg"
      imageAlt="Design system documentation and components"
      imagePosition="left"
    />
  </div>

  <!-- Full width image -->
  <div class="w-full bg-gray-50">
    <FullWidthImage
      title="Global Design System"
      description="A unified design system that adapts to local market needs while maintaining brand consistency."
      image="/images/banking.jpg"
      imageAlt="Global design system components and guidelines"
      caption="Design system documentation"
    />
  </div>

  <!-- Quote section -->
  <Quote {...userQuote} />

  <!-- Design process -->
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-4xl">
      <section class="mb-24">
        <RichText content={designProcess} />
      </section>
    </div>
  </div>

  <!-- Testimonials -->
  <div class="w-full">
    <Testimonials testimonials={testimonials} />
  </div>
</CaseStudyLayout>