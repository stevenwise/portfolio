---
import CaseStudyLayout from '../../layouts/CaseStudyLayout.astro';
import Stats from '../../components/Stats.astro';
import ImageTextSection from '../../components/ImageTextSection.astro';
import RichText from '../../components/RichText.astro';
import Testimonials from '../../components/Testimonials.astro';
import FullWidthImage from '../../components/FullWidthImage.astro';
import Quote from '../../components/Quote.astro';
import TextSection from '../../components/TextSection.astro';

const stats = [
  { value: "450+", label: "Courses managed annually" },
  { value: "12", label: "Teams involved" },
  { value: "40%", label: "Time saved in process" },
  { value: "28", label: "Pain points identified" }
];

const designProcess = {
  title: "Design Process",
  subtitle: "Workflow Optimization Approach",
  paragraphs: [
    "Our approach to streamlining course rollover workflows focused on understanding and optimizing complex inter-team processes.",
    "Here's how we approached this challenge:"
  ],
  lists: [
    {
      type: "ordered",
      items: [
        {
          text: "Discovery Phase",
          subItems: [
            "Process mapping workshops",
            "Stakeholder interviews",
            "Pain point analysis",
            "Opportunity identification"
          ]
        },
        {
          text: "Solution Design",
          subItems: [
            "Workflow optimization",
            "Process standardization",
            "System integration planning",
            "Change impact assessment"
          ]
        },
        {
          text: "Implementation Planning",
          subItems: [
            "Transition roadmap",
            "Training needs analysis",
            "Support model design",
            "Success metrics definition"
          ]
        }
      ]
    }
  ]
};

const testimonials = [
  {
    quote: "Steve's methodical approach to understanding and improving our workflows has transformed how we manage course rollovers. The efficiency gains have been remarkable.",
    author: "Dr. Rachel Anderson",
    role: "Head of Academic Programs"
  },
  {
    quote: "The workflow improvements Steve designed have significantly reduced the time and effort required for course management. His ability to understand complex processes and find elegant solutions is exceptional.",
    author: "James Wilson",
    role: "Course Administration Manager"
  }
];

const userQuote = {
  quote: "The new workflow has made course rollover so much more straightforward. What used to take weeks can now be done in days.",
  author: "Faculty Administrator",
  role: "School of Engineering"
};

const overviewContent = [
  "Led the discovery project to streamline course rollover workflows across multiple teams at the University of Southampton.",
  "The project focused on identifying inefficiencies and opportunities for improvement in existing processes."
];

const challengeContent = [
  "Understanding and optimizing complex workflows involving multiple teams with different needs and constraints.",
  "Creating standardized processes while maintaining flexibility for department-specific requirements."
];
---

<CaseStudyLayout 
  title="Streamlining organisational workflows"
  organization="University of Southampton"
>
  <!-- Overview section -->
  <div class="max-w-7xl mx-auto px-6">
    <TextSection 
      title="Overview"
      content={overviewContent}
    />

    <TextSection 
      title="The Challenge"
      subtitle="Process Complexity"
      content={challengeContent}
    />
  </div>

  <!-- Stats section -->
  <div class="bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <Stats stats={stats} />
    </div>
  </div>

  <!-- Image text sections -->
  <div class="max-w-7xl mx-auto px-6">
    <ImageTextSection
      title="Discovery"
      content={[
        "Conducted extensive process mapping and analysis to understand current workflows and identify opportunities for improvement.",
        "Key activities included:",
        "• Process mapping workshops\n• Stakeholder interviews\n• Pain point analysis\n• System capability assessment\n• Workflow documentation"
      ]}
      image="/images/workflow.jpg"
      imageAlt="Process mapping workshop with university staff"
      imagePosition="right"
    />

    <ImageTextSection
      title="Solution Design"
      content={[
        "Developed optimized workflows and processes to improve efficiency and reduce manual effort.",
        "Key deliverables:\n• Optimized process maps\n• Standard operating procedures\n• Integration requirements\n• Training materials\n• Implementation roadmap"
      ]}
      image="/images/workflow.jpg"
      imageAlt="Optimized workflow documentation"
      imagePosition="left"
    />
  </div>

  <!-- Full width image -->
  <div class="w-full bg-gray-50">
    <FullWidthImage
      title="Process Optimization"
      description="Comprehensive workflow documentation showing the optimized course rollover process."
      image="/images/workflow.jpg"
      imageAlt="Optimized course rollover process documentation"
      caption="Optimized workflow documentation"
    />
  </div>

  <!-- Quote section -->
  <Quote {...userQuote} />

  <!-- Design process -->
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-4xl">
      <section class="mb-24">
        <RichText content={designProcess} />
      </section>
    </div>
  </div>

  <!-- Testimonials -->
  <div class="w-full">
    <Testimonials testimonials={testimonials} />
  </div>
</CaseStudyLayout>