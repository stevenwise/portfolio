---
interface Props {
  title: string;
  organization: string;
}

import Layout from './Layout.astro';
import RelatedCaseStudies from '../components/RelatedCaseStudies.astro';

const { title, organization } = Astro.props;
const currentPath = Astro.url.pathname;
---

<Layout title={`${title} | Case Study`}>
  <div class="bg-[#6BA03F]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center min-h-[480px] flex flex-col justify-center mb-24 pt-40">
        <div class="max-w-[75%] mx-auto">
          <h1 class="text-5xl leading-[1.4] font-montserrat font-bold text-white mb-4">{title}</h1>
          <p class="text-xl text-white/90">{organization}</p>
        </div>
      </div>
    </div>
  </div>

  <slot />

  <div class="max-w-7xl mx-auto px-6">
    <RelatedCaseStudies currentPath={currentPath} />
  </div>
</Layout>