---
interface Props {
  title: string;
  subtitle?: string;
  content: string[];
}

const { title, subtitle, content } = Astro.props;
---

<section class="mb-24">
  <div class="max-w-[880px]">
    <h2 class="text-3xl font-montserrat font-bold text-gray-900 mb-6">{title}</h2>
    
    {subtitle && (
      <h3 class="text-2xl font-montserrat font-semibold text-gray-900 mb-4">{subtitle}</h3>
    )}
    
    <div class="space-y-6">
      {content.map(paragraph => (
        <p class="text-lg text-gray-600 leading-relaxed">{paragraph}</p>
      ))}
    </div>
  </div>
</section>